<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/medical_leave"
    android:layout_height="match_parent"
    tools:context="com.example.uddishverma22.hint.Fragments.Fragment11">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv11"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="30dp"
            android:text="How easy is it for you to take medical leave for a mental health condition?"
            android:textStyle="bold"
            android:textColor="#fff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#52b3ff"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_some"
                android:text="SOMETIMES"
                android:textAppearance="?android:textAppearanceLarge"
                android:layout_weight="1"
                android:textColor="#fff"
                android:background="#04AF55"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CAN'T SAY"
                android:textColor="#fff"
                android:textAppearance="?android:textAppearanceLarge"
                android:background="#00b4b7"
                android:id="@+id/btn_cant"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:textSize="20dp"
                    android:background="#fff"
                    android:textColor="#a83d3d"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_never"
                    android:text="never"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#ff5c5c"
                    android:text="OFTEN"
                    android:id="@+id/btn_often"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="#fff"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="RARELY"
                    android:textColor="#000"
                    android:background="#c6b7c3"
                    android:id="@+id/btn_rare"
                    android:layout_weight="1"
                    android:textAppearance="?android:textAppearanceLarge"
                    />
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
