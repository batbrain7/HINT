<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/men_phy"
    tools:context="com.example.uddishverma22.hint.Fragments.Fragment16">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tv16"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="30dp"
            android:text="Do you feel that your employer takes mental health as seriously as physical health?"
            android:textStyle="bold"
            android:textColor="#000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF952"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="YES"
                android:id="@+id/btn_yes"
                android:textAppearance="?android:textAppearanceLarge"
                android:background="#87c759"
                android:textColor="#fff"
                android:textStyle="bold"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NO"
                android:textStyle="bold"
                android:id="@+id/btn_no"
                android:textColor="#fff"
                android:background="#e85954"
                android:textAppearance="?android:textAppearanceLarge"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MAYBE"
                android:textStyle="bold"
                android:id="@+id/btn_dont"
                android:textColor="#a83d3d"
                android:background="#fff"
                android:textAppearance="?android:textAppearanceLarge"
                />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
